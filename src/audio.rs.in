
#[derive(Debug, PartialEq, Eq, Deserialize, Clone)]
pub struct Audio {
    pub id: Id,
    pub owner_id: OwnerId,
    pub artist: String,
    pub title: String,
    #[serde(deserialize_with="::api::parse_timestamp")]
    pub date: NaiveDateTime,
    pub url: String, // Url !!!
    pub lyrics_id: Option<Id>,
    pub album_id: Option<Id>,
    pub genre_id: Option<Genre>,
    pub duration: Duration,
    #[serde(default)]
    #[serde(deserialize_with="::api::parse_boolean")]
    pub no_search: bool, // FIXME: bool
}

#[derive(Debug, PartialEq, Eq, Deserialize, Clone)]
pub struct Lyrics {
    pub lyrics_id: Id,
    pub text: String,
}

#[derive(Debug, PartialEq, Eq, Deserialize, Clone)]
pub struct Album {
    pub id: Id,
    pub owner_id: OwnerId,
    pub title: String,
}

#[derive(Debug, PartialEq, Eq, Deserialize, Clone)]
pub struct UploadUrl {
    pub upload_url: String,
}

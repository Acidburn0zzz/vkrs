
#[derive(Debug, Clone, PartialEq, Eq, Deserialize)]
pub struct Video {
    pub id: Id,
    pub owner_id: OwnerId,
    pub album_id: Option<Id>,
    pub user_id: Option<Id>,
    pub title: String,
    pub duration: Duration,
    pub description: String,
    #[serde(deserialize_with="::api::parse_timestamp")]
    pub date: NaiveDateTime,
    pub views: u32,
    pub comments: u32,
    pub photo_130: String, // URL
    pub photo_320: String, // URL
    pub photo_640: Option<String>, // URL
    pub photo_800: Option<String>, // URL
    #[serde(deserialize_with="::api::parse_timestamp")]
    pub adding_date: NaiveDateTime,
    pub player: String, // URL
    #[serde(deserialize_with="::api::parse_boolean")]
    pub can_add: bool, // bool
    #[serde(default)]
    #[serde(deserialize_with="::api::parse_boolean")]
    pub can_edit: bool, // bool
    #[serde(default)]
    #[serde(deserialize_with="::api::parse_boolean")]
    pub can_report: bool, // bool
    #[serde(default)]
    #[serde(deserialize_with="::api::parse_boolean")]
    pub can_comment: bool, // bool
    #[serde(default)]
    #[serde(deserialize_with="::api::parse_boolean")]
    pub converting: bool, // bool
    #[serde(default)]
    #[serde(deserialize_with="::api::parse_boolean")]
    pub repeat: bool, // bool
    pub files: Option<VideoFiles>,
    pub likes: Option<LikesCount>,

    pub placer_id: Option<Id>,
    #[serde(deserialize_with="::api::parse_timestamp")]
    pub tag_created: NaiveDateTime,
    pub tag_id: Option<Id>,
}

#[derive(Debug, Clone, PartialEq, Eq, Deserialize)]
pub struct VideoFiles {
    pub mp4_240: Option<String>,
    pub mp4_360: Option<String>,
    pub mp4_480: Option<String>,
    pub mp4_720: Option<String>,
    pub external: Option<String>,
}

#[derive(Debug, Clone, PartialEq, Eq, Deserialize)]
pub struct SavedVideo {
    pub upload_url: String,
    pub vid: Id,
    pub owner_id: OwnerId,
    pub name: String,
    pub description: String,
    pub access_key: Option<String>,
}

#[derive(Debug, Clone, PartialEq, Eq, Deserialize)]
pub struct Album {
    pub id: Id,
    pub owner_id: OwnerId,
    pub title: String,
    pub count: usize,
    #[serde(deserialize_with="::api::parse_timestamp")]
    pub updated_time: NaiveDateTime,

    pub photo_130: Option<String>, // URL
    pub photo_160: Option<String>, // URL
    pub photo_320: Option<String>, // URL
    pub photo_640: Option<String>, // URL
    pub photo_800: Option<String>, // URL

    #[serde(default)]
    #[serde(deserialize_with="::api::parse_boolean")]
    pub is_system: bool,
    #[serde(default)]
    #[serde(deserialize_with="::api::parse_boolean")]
    pub can_comment: bool,
    #[serde(default)]
    #[serde(deserialize_with="::api::parse_boolean")]
    pub can_repost: bool,
}

#[derive(Debug, Clone, PartialEq, Eq, Deserialize)]
pub struct Tag {
    pub user_id: Id,
    pub tag_id: Id,
    pub placer_id: Id,
    pub tagged_name: String,
    #[serde(deserialize_with="::api::parse_timestamp")]
    pub date: NaiveDateTime,
    #[serde(deserialize_with="::api::parse_boolean")]
    pub viewed: bool,
}

#[derive(Debug, Clone, PartialEq, Eq, Deserialize)]
pub struct Page<T: Deserialize> {
    pub items: Vec<T>,
    pub next: Option<String>,
}

#[derive(Debug, Clone, PartialEq, Eq, Deserialize)]
pub struct CatalogBlock {
    pub name: String,
    pub id: Id,
    pub items: Vec<CatalogItem>,
    pub next: Option<String>,
    pub view: String, // TODO: make enum, known variant: "vertical"
    #[serde(deserialize_with="::api::parse_boolean")]
    pub can_hide: bool,
    #[serde(rename="type")]
    pub kind: CatalogBlockKind,
}

#[derive(Debug, Clone, PartialEq, Eq, Deserialize)]
pub struct CatalogItem {
    pub id: Id,
    pub owner_id: OwnerId,
    pub title: String,
    #[serde(rename="type")]
    pub kind: CatalogItemKind,

    // kind=Video
    #[serde(default)]
    pub duration: Duration,
    pub description: Option<String>,
    #[serde(deserialize_with="::api::parse_timestamp")]
    pub date: NaiveDateTime,
    #[serde(default)]
    pub views: u32,
    #[serde(default)]
    pub comments: u32,
    pub photo_130: Option<String>,
    pub photo_160: Option<String>,
    pub photo_320: Option<String>,
    pub photo_640: Option<String>,
    pub photo_800: Option<String>,
    #[serde(default)]
    #[serde(deserialize_with="::api::parse_boolean")]
    pub can_add: bool,
    #[serde(default)]
    #[serde(deserialize_with="::api::parse_boolean")]
    pub can_edit: bool,

    // kind=Album
    #[serde(default)]
    pub count: u32,
    #[serde(deserialize_with="::api::parse_timestamp")]
    pub updated_time: NaiveDateTime,
}

enum_str! { CatalogBlockKind {
    Channel = "channel",
    Category = "category",
}}

enum_str! { CatalogItemKind {
    Video = "video",
    Album = "album",
}}
